@model GighubApp.ViewModels.GigViewModel
@{
    ViewBag.Title = "AddGigs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a Gig</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        <div class="col-sm-12">
            @Html.LabelFor(model => model.Venue)
            @Html.TextBoxFor(model => model.Venue, new { @class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            @Html.LabelFor(model => model.Date)
            @Html.TextBoxFor(model => model.Date, new { @class = "form-control", @type="date" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            @Html.LabelFor(model => model.Time)
            @Html.TextBoxFor(model => model.Time, new {@class="form-control", @type="time"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            @Html.LabelFor(model => model.Genre)
            @Html.DropDownListFor(model => model.Genre, new SelectList(Model.Genres, "GenreId", "GenreName"), new {@class = "form-control"})
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Add Gig</button>
        </div>
    </div>
}
